<article>
    <% if notice %>
        <aside id="notice"><%= notice %></aside>
    <% end %>

    <h2>Your Cart</h2>

    <table>
        <%= render(cart.line_items, { render_actions: render_actions }) %>
        <tfoot>
            <tr>
                <th colspan="2">Total:</th>
                <td class="price"><%= number_to_currency(cart.total_price) %></td>
            </tr>
        </tfoot>
    </table>

    <% if render_actions %>
      <div class="actions">
        <%= button_to "Empty Car", cart,
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      remote: true %>

        <%= button_to "Checkout", new_order_path,
                      method: :get,
                      class: "checkout" %>
      </div>
    <% end %>
</article>
